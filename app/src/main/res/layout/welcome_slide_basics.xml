<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome_second_header"
        android:text="@string/welcome_second_header"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_second_header"
        android:layout_marginTop = "32dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="56dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView style="?android:textAppearanceMedium"
                android:id="@+id/welcome_second_content1"
                android:text="@string/welcome_second_content1"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView style="?android:textAppearanceMedium"
                android:id="@+id/welcome_second_content2"
                android:text="@string/welcome_second_content2"
                android:textSize="16sp"
                android:layout_below="@id/welcome_second_content1"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView style="?android:textAppearanceMedium"
                android:id="@+id/welcome_second_content3"
                android:text="@string/welcome_second_content3"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcome_second_content2"
                android:layout_marginTop="16dp"/>

            <TextView style="?android:textAppearanceMedium"
                android:id="@+id/welcome_second_content4"
                android:text="@string/welcome_second_content4"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcome_second_content3"
                android:layout_marginTop="16dp" />

            <TextView style="?android:textAppearanceMedium"
                android:id="@+id/welcome_second_content5"
                android:text="@string/welcome_second_content5"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcome_second_content4"
                android:layout_marginTop="16dp" />

            <TextView style="?android:textAppearanceMedium"
                android:id="@+id/welcome_second_content6"
                android:text="@string/welcome_second_content6"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcome_second_content5"
                android:layout_marginTop="40dp" />

            <TextView style="?android:textAppearanceMedium"
                android:id="@+id/welcome_second_content7"
                android:text="@string/welcome_second_content7"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcome_second_content6"
                android:layout_marginTop="16dp" />

            <TextView style="?android:textAppearanceMedium"
                android:id="@+id/welcome_second_content8"
                android:text="@string/welcome_second_content8"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcome_second_content7"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
